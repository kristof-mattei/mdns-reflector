    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug executable 'mdns-reflector'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": ["run", "--bin=mdns-reflector"]
            },
            "args": [
                "-f",
                "-v",
                "eth0",
                "eth10"
                // "enp4s0",
                // "br-611646b6fc6e"
            ],
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,mdns_reflector=TRACE"
            },
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        },
        {
            "name": "Debug executable 'mdns-reflector' --help",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": ["run", "--bin=mdns-reflector"]
            },
            "args": ["-h"],
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,mdns_reflector=TRACE"
            },
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        },
        {
            "name": "Debug unit tests in executable 'mdns-reflector'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": ["test", "--bin=mdns-reflector"]
            },
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,mdns_reflector=TRACE"
            },
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        },
        {
            "name": "Debug integration test 'integration_tests'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": ["test", "--test=integration_tests"]
            },
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,mdns_reflector=TRACE"
            },
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        }
    ]
}
