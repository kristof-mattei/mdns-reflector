    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'mdns-reflector'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mdns-reflector",
                    "--package=mdns-reflector"
                ],
                "filter": {
                    "name": "mdns-reflector",
                    "kind": "bin"
                }
            },
            "args": [
                "-f",
                "-v",
                // "eth0",
                // "eth10"
                "enp4s0",
                "br-611646b6fc6e"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "ERROR,mdns_reflector=ERROR"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'mdns-reflector' --help",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mdns-reflector",
                    "--package=mdns-reflector"
                ],
                "filter": {
                    "name": "mdns-reflector",
                    "kind": "bin"
                }
            },
            "args": ["--help"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,mdns_reflector=TRACE"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'mdns-reflector'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=mdns-reflector",
                    "--package=mdns-reflector"
                ],
                "filter": {
                    "name": "mdns-reflector",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,mdns_reflector=TRACE"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'integration_tests'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration_tests",
                    "--package=mdns-reflector"
                ],
                "filter": {
                    "name": "integration_tests",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG,mdns_reflector=TRACE"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        }
    ]
}
